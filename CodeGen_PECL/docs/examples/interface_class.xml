<?xml version="1.0"?>
<!DOCTYPE extension SYSTEM "../extension.dtd">
<extension name="interface_class" version="1.0.0">
 <interface name="TestInterface">
 </interface>
 <class name="TestClass">
  <implements interface="TestInterface"/>
 </class>
 <test>
  <code>
   $c = new TestClass();

   echo ($c instanceof TestInterface) ? "OK" : "failure";
  </code>
 </test>
</extension>
