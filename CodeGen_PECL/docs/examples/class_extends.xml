<?xml version="1.0" ?>
<!DOCTYPE extension SYSTEM "../extension.dtd">
<extension name="class_extends" version="1.0.0">

 <class name="class1"/>

 <class name="class2" extends="class1"/>

 <test name="extend">
  <code>
   <?data 
    $c2 = new class2; 
    echo $c2 instanceof class1 ? "OK" : "Failure";
   ?>
  </code>
 </test>

</extension>
